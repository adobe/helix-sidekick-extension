{
  "manifest_version": 3,
  "name": "__MSG_title__",
  "version": "5.9.0",
  "author": "Adobe",
  "homepage_url": "https://www.hlx.live/tools/sidekick/",
  "default_locale": "en",
  "options_page": "options.html",
  "description": "__MSG_description__",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": [
      "https://admin.hlx.page/*"
    ]
  },
  "web_accessible_resources": [{
    "resources": [
      "app.css",
      "de.css",
      "configpicker.js",
      "fr.css",
      "lib/polyfills.min.js",
      "lib/js-yaml.min.js",
      "module.js",
      "sidekick.js",
      "utils.js",
      "view/json.js"
    ],
    "matches": [
      "https://*/*",
      "http://localhost:3000/*"
    ]
  }],
  "action": {
    "default_title": "__MSG_title__",
    "default_icon": {
      "16": "icons/helix_logo_16.png",
      "32": "icons/helix_logo_32.png",
      "48": "icons/helix_logo_48.png",
      "128": "icons/helix_logo_128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "MacCtrl+Shift+H"
      },
      "description": "__MSG_description_shortcut__"
    }
  },
  "icons": {
    "16": "icons/helix_logo_16.png",
    "32": "icons/helix_logo_32.png",
    "48": "icons/helix_logo_48.png",
    "128": "icons/helix_logo_128.png"
  }
}
